#!/bin/zsh

case "$1" in
"light")
  kitty @ set-colors -a -c "$HOME/.config/kitty/themes/base-16/base16-gruvbox-light-medium.conf"
  # kitty @ set-colors -a -c "$HOME/.config/kitty/themes/tempus-themes/tempus_day.conf"
  ;;
"dark")
  kitty @ set-colors -a -c "$HOME/.config/kitty/themes/base-16/base16-solarized-dark.conf"
  # kitty @ set-colors -a -c "$HOME/.config/kitty/themes/tempus-themes/tempus_night.conf"
  ;;
*)
  cat <<EOF
    usage: kitty-theme [light|dark]
EOF
esac
