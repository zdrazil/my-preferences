#!/usr/bin/env bash
# shellcheck enable=all

background_theme="dark"

case $(hostname) in
Vladimirs-Mews-MacBook-Pro.local)
    MY_THEME=solarized-dark
    ;;
VladimisMewsMBP)
    MY_THEME=solarized-dark
    ;;
*)
    MY_THEME=oceanic-next
    ;;
esac

MY_LIGHT_THEME=cupertino

case "$(uname)" in
  Darwin)
    # Use System Events → appearance preferences → dark mode (works in Auto/Manual)
    dark_mode_status="$(osascript -e 'tell application "System Events" to get dark mode of appearance preferences')"
    if [[ "${dark_mode_status}" != "true" ]]; then
      background_theme="light"
    fi
    ;;
  *) ;;
esac

if command -v theme-sh >/dev/null; then
    if [[ "${background_theme}" = 'light' ]]; then
        theme-sh "${MY_LIGHT_THEME}"
    else
        theme-sh "${MY_THEME}"
    fi
fi

echo "${background_theme}"
