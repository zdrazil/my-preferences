[user]
	name = Vladimír Zdražil
	email = git@vzdrazil.com
[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input
	pager = delta
[credential]
	helper = osxkeychain
[commit]
	template = ~/.git_commit_msg.txt
	cleanup = strip
[merge]
	tool = vimdiff
[diff]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	keepBackup = false
	prompt = false
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	brt = "!git for-each-ref refs/heads --sort committerdate --format='%(HEAD) %(refname:short)'"
[init]
	defaultBranch = master
[url "git@github.com:"]
	insteadOf = https://github.com/
[rerere]
	enabled = true
[pull]
	rebase = true
[delta]
	line-numbers = true
	side-by-side = true

