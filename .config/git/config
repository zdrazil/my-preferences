[merge]
	tool = vscode
[diff]
	tool = vscode
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	brt = !git for-each-ref refs/heads --sort committerdate --format='%(refname:short) %(HEAD)'
	show-word = show --word-diff=color --word-diff-regex='\\w+'
    diff-word = diff --color-words
	diff-whitespace = diff -w
	sbs = -c delta.side-by-side=true diff
	pushf = push --force-with-lease --force-if-includes
[rerere]
	enabled = true
	autoupdate = true
[pull]
	rebase = true
[delta]
	line-numbers = false
	side-by-side = false
	true-color = always
	navigate = true
[init]
	defaultBranch = master
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[mergetool "vscode"]
	cmd = code --wait $MERGED
[difftool "bc3"]
	trustExitCode = true
[mergetool "bc3"]
	trustExitCode = true
[mergetool]
	keepBackup = false
[include]
	path = config.local
	path = config.ssh
[gpg]
	format = ssh
[push]
	autoSetupRemote = true
	useForceIfIncludes = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[rebase]
	autoSquash = true
	updateRefs = true
[diff]
